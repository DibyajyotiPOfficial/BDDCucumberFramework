package cura_healthcare_services;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;import org.openqa.selenium.support.ui.ExpectedCondition;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

public class CURA_ENDToEND_FLOW {

	public static void main(String[] args) throws Exception {
		
		System.setProperty("webdriver.chrome.driver", "G:\\2025\\chromedriver-win64\\chromedriver-win64\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(3000));
		driver.manage().window().maximize();
		driver.get("https://katalon-demo-cura.herokuapp.com/");
		//Validating title
		String expectedTitle = "CURA Healthcare Service";
		if (expectedTitle.equals(driver.getTitle())) {
			System.out.println(expectedTitle + " : Matches.");
		} else {
			System.out.println(expectedTitle + " : Does not Match." + " as actual is: " + driver.getTitle());
		}
		//Validating URL
		String expectedURL = "https://katalon-demo-cura.herokuapp.com/";
		if (expectedURL.equals(driver.getCurrentUrl())) {
			System.out.println(expectedURL + " : Matches.");
		} else {
			System.out.println(expectedURL + " : Does not Match." + " as actual is: " + driver.getCurrentUrl());
		}
		Thread.sleep(5000);
		driver.findElement(By.id("menu-toggle")).click();
		Thread.sleep(5000);
		driver.findElement(By.xpath("//a[contains(text(),'Home')]")).click();
		System.out.println("Page Refreshed: " + driver.getTitle() + " and " + driver.getCurrentUrl());
		Thread.sleep(5000);
		driver.navigate().refresh();
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(30));
		wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//a[contains(text(),'Home')]"))).click();
		Thread.sleep(5000);
		driver.findElement(By.xpath("//a[contains(text(),'Login')]")).click();
		
		
		
		
		
		driver.quit();
	}

}
