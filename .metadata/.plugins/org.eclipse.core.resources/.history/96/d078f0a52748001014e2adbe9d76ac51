package cura_healthcare_services;

import java.awt.Robot;
import java.awt.event.KeyEvent;
import java.time.Duration;
import java.util.HashMap;
import java.util.Map;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;

public class CURA_ENDToEND_FLOW {

    public static void main(String[] args) throws Exception {

        System.setProperty("webdriver.chrome.driver", "G:\\2025\\chromedriver-win64\\chromedriver-win64\\chromedriver.exe");

        // Disable Chrome automation banners and password manager popup
        ChromeOptions options = new ChromeOptions();
        options.setExperimentalOption("excludeSwitches", new String[]{"enable-automation"});
        options.setExperimentalOption("useAutomationExtension", false);
        Map<String, Object> prefs = new HashMap<>();
        prefs.put("credentials_enable_service", false);
        prefs.put("profile.password_manager_enabled", false);
        options.setExperimentalOption("prefs", prefs);

        WebDriver driver = new ChromeDriver(options);
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
        driver.manage().window().maximize();
        driver.get("https://katalon-demo-cura.herokuapp.com/");

        // Title validation
        String expectedTitle = "CURA Healthcare Service";
        if (expectedTitle.equals(driver.getTitle())) {
            System.out.println(expectedTitle + " : Matches.");
        } else {
            System.out.println(expectedTitle + " : Does not Match. Actual: " + driver.getTitle());
        }

        // URL validation
        String expectedURL = "https://katalon-demo-cura.herokuapp.com/";
        if (expectedURL.equals(driver.getCurrentUrl())) {
            System.out.println(expectedURL + " : Matches.");
        } else {
            System.out.println(expectedURL + " : Does not Match. Actual: " + driver.getCurrentUrl());
        }

        Thread.sleep(2000);
        driver.findElement(By.id("menu-toggle")).click();
        Thread.sleep(1000);
        driver.findElement(By.xpath("//a[contains(text(),'Home')]")).click();
        System.out.println("Page Refreshed: " + driver.getTitle() + " and " + driver.getCurrentUrl());

        Thread.sleep(2000);
        driver.findElement(By.id("btn-make-appointment")).click();

        WebElement text = driver.findElement(By.xpath("//p[contains(text(),'Please login to make appointment.')]"));
        if (text.isDisplayed()) {
            driver.findElement(By.id("txt-username")).sendKeys("John Doe");
            driver.findElement(By.id("txt-password")).sendKeys("ThisIsNotAPassword");
            driver.findElement(By.id("btn-login")).click();
            System.out.println("Login successful!");

            // Handle Google Chrome password warning popup
            Thread.sleep(3000); // Wait for the popup to appear
            Robot robot = new Robot();
            robot.keyPress(KeyEvent.VK_ENTER);  // Simulate Enter key (equivalent to clicking OK)
            robot.keyRelease(KeyEvent.VK_ENTER);
            System.out.println("Pressed Enter to close popup.");
        } else {
            System.out.println("Unexpected login page content.");
        }

        // Continue with booking logic here...
        // Example: Selecting options and booking appointment

//        driver.quit();
    }
}
